# Proyecto Sócrates - Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Django Core Settings
DJANGO_SETTINGS_MODULE=config.settings_prod
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=socrates.yourdomain.com,ssl-monitor.yourdomain.com

# Database Configuration
DB_ENGINE=django.db.backends.mysql
DB_NAME=socrates_prod
DB_USER=socrates_user
DB_PASSWORD=your-strong-database-password-here
DB_HOST=mysql-prod-server
DB_PORT=3306

# Redis Configuration
REDIS_URL=redis://redis-prod-server:6379/1

# Celery Configuration
CELERY_BROKER_URL=redis://redis-prod-server:6379/1
CELERY_RESULT_BACKEND=redis://redis-prod-server:6379/1

# Email Configuration
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=Sócrates SSL Monitor <noreply@yourdomain.com>
ADMIN_EMAIL=admin@yourdomain.com

# SSL Analysis Configuration
SSL_ANALYSIS_TIMEOUT=45
MAX_CONCURRENT_ANALYSES=3
ANALYSIS_RETENTION_DAYS=180

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://socrates.yourdomain.com,https://ssl-monitor.yourdomain.com

# Security Headers
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
CSRF_TRUSTED_ORIGINS=https://socrates.yourdomain.com,https://ssl-monitor.yourdomain.com

# Error Tracking (Optional - Sentry)
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_STORAGE=s3
BACKUP_S3_BUCKET=socrates-backups
BACKUP_S3_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Monitoring
HEALTH_CHECK_ENABLED=True
MONITORING_ENABLED=True

# Rate Limiting
RATELIMIT_ENABLE=True

# Static Files (if using S3/CDN)
USE_S3_STATIC=False
AWS_S3_STATIC_BUCKET=socrates-static-files

# Notification Settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
TEAMS_WEBHOOK_URL=https://your-teams-webhook-url

# SSL Certificate Defaults
DEFAULT_ANALYSIS_FREQUENCY=7
EXPIRATION_WARNING_DAYS=30,14,7,1
AUTO_RENEWAL_CHECK=True
NOTIFICATION_ENABLED=True